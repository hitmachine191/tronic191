<h1><%= album.isNew() ? "New Album" : "Edit " + album.escape("title") %></h1>

<form class="forms album-form">

  <div class="input">
    <label for="album_title">Title</label>
    <input type="text" id="album_title" name="album[title]" value="<%= album.escape("title") %>">
  </div>


  <div class="input">
    <label for="album_date">Date</label>
    <input type="date" id="album_date" name="album[date]" value="<%= album.escape("date") ? album.escape("date") : new Date().toJSON().slice(0,10) %>">
  </div>


  <div class="input">
    <label for="album_description">Description</label>
    <textarea id="album_description" name="album[description]"><%= album.escape("description") %></textarea>
  </div>

  <div class="input">
    <label for="album_location">Location</label>
    <input type="text" id="album_location" name="album[location]" value="<%= album.escape("location") %>">
  </div>

  <div class="input">
    <label for="album_visibility">Visiblity</label>
    <select name="album[visibility]" id="album_visibilty">
      <option value="private_album" <%= album.get("visibility") === "private_album" ? "selected" : "" %>>
        Only Me
      </option>
      <option value="unlisted_album" <%= album.get("visibility") === "unlisted_album" ? "selected" : ""%>>
        Unlisted
      </option>
      <option value="public_album" <%= album.get("visibility") === "public_album" ? "selected" : ""%>>
        Public
      </option>
    </select>
  </div>


  <div class="submit">
    <input type="Submit" value="<%= album.isNew() ? "Create Album" : "Update Album"  %>">
  </div>

</form>

