<% if(user) { %>
  <div class="public-user-info">
  <img class="avatar avatar-thumb" src="<%= user.get("avatar_thumb_url")%>">
  <h2><%= user.escape("name") %></h2>
  </div>
<% } %>


<h1><%= title %></h1>

<ul class="albums-index group">
<% albums.forEach(function(album) { %>
  <li>
    <figure class="album-tile">
      <a href="#/albums/<%= album.id %>">
        <img class="album-thumb" src="<%= album.get("thumb_url")%> ">
      </a>


      <figcaption>
        <div class="alb-title"><%= album.escape("title") %></div>
        <div class="alb-info">
          <!-- visibility icon goes here -->
          <%= album.escape("date_string") %>
           -
          Photos: <%= album.escape("photo_count") %>
        </div>
        <% if(title === "Public Albums") { %>
          By <a href="#/users/<%= album.get("owner_id") %>"><%= album.escape("owner_name") %></a>
        <% } %>


      </figcaption>

    </figure>
  </li>


<% }) %>
</ul>