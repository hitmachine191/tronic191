<% public_view ||= false %>

<ul class="albums-index group">
<% albums.each do |album| %>
  <li>
    <figure class="album-tile">
      <a href="<%= album_url(album) %>">
        <img class="album-thumb" src="<%= album.photos.first ? album.photos.first.image.url(:thumb) : image_url("default_album.png") %> ">
      </a>
      
      
      <figcaption>
        <div class="alb-title"><%= album.title %></div>
        <div class="alb-info">
          <%#= status_icon_for(album) %>
          <%= album.date.strftime("%b %d, %Y") %>
           -
          Photos: <%= album.photos.count %>
        </div>
        <% if public_view %>
          By <a href="<%= user_url(album.owner) %>"><%= album.owner.name %></a>
        <% end %>

        
      </figcaption>
    
    </figure>
    <!-- <% if album.owner == current_user %>
    <form action="<%= album_url(album) %>" method="post">
      <%= auth_token_input %>
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="delete">
    </form>
    <% end %> -->
  </li>


<% end %>
</ul>