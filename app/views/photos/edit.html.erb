<h1>Edit Caption</h1>

<img src="<%= @photo.image.url(:thumb) %>">

<form action="<%= photo_url(@photo) %>" method="post">
  <%= auth_token_input %>
  
  <input type="hidden" name="_method" value="put">
  
  <label for="photo_caption">Caption:</label>
  <textarea name="photo[caption]" id="photo_caption">
    <%= @photo.caption %>
  </textarea>
  
  <input type="submit" value="OK">
  
</form>