<h1><%= @album.title %></h1>
<div class="album-info">
  <%= @album.photos.count %> photos
  Visibility: <%= @album.visibility %>
</div>


<% if @album.owner == current_user %>
<ul class="album-settings">
  <% if @album.unlisted_album? %>
    <li>Use this link to share: 
      <%= "#{album_url(@album)}?auth_token=#{@album.auth_token}" %>
  <% end %>
  <li><a href="<%= new_album_photo_url(@album) %>">add photos</a></li>
  <li><a href="<%= edit_album_url(@album) %>">album settings</a></li>
</ul>
<% end %>



<%= render 'photos/pictures', photos: @album.photos %>